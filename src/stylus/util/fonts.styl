@font-face
    font-family: "Lexend Mega"
    font-style normal
    font-weight normal
    src url("/fonts/lexend-mega.ttf")
@font-face
    font-family: "Minion Pro"
    font-style normal
    font-weight normal
    src: url("/fonts/minion-pro.ttf")
@font-face
    font-family: "Minion Pro"
    font-style normal
    font-weight bold
    src: url("/fonts/minion-pro_bold.ttf")
@font-face
    font-family: "Perpetua"
    font-style normal
    font-weight normal
    src: url("/fonts/perpetua.ttf")
@font-face
    font-family: "Perpetua"
    font-style normal
    font-weight bold
    src: url("/fonts/perpetua_bold.ttf")
@font-face
    font-family: "Perpetua"
    font-style italic
    font-weight normal
    src: url("/fonts/perpetua_italic.ttf")
@font-face
    font-family: "Perpetua"
    font-style italic
    font-weight bold
    src: url("/fonts/perpetua_bold-italic.ttf")
@font-face
    font-family: "Lato"
    font-style normal
    font-weight bold
    src: url("/fonts/lato_bold.ttf")


lexend(sz, c=black, w=bold)
    font sz "Lexend Mega", sans-serif
    text-transform uppercase
    color c
    font-weight w
    /**/
minion(sz, c=black, w=normal)
    font sz "Minion Pro", serif
    color c
    font-weight w
    line-height sz
perpetua(sz, c=black, w=normal, st=normal, h=1.1)
    font sz "Perpetua", serif
    color c
    font-weight w
    font-style st
    line-height sz*h
lato(sz, c=black)
    font sz "Lato", sans-serif
    color c