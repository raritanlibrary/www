// Structure
flex(dir=row, wrapping=nowrap, align=center, x-align=stretch, gap=0)
  display flex
  flex-flow dir wrapping
  justify-content align
  align-items x-align
  gap gap

// Motion
cube-out = cubic-bezier(0.33, 1, 0.68, 1)

// Breakpoints
tablet()
  @media screen and (min-width 500px)
    {block}

laptop()
  @media screen and (min-width 768px)
    {block}

standard()
  @media screen and (min-width 1368px)
    {block}