// Fixed ------------------------------
nav-main                    = #fff8e3d9
nav-mainB                   = #fff8e333
dropdowns                   = #2e0405
foot-main                   = #fff8e3
foot-mainA                  = #fff8e3cc
foot-mainB                  = #fff8e3d9
foot-mainC                  = #fff8e388
foot-mainD                  = #fff8e344
// Alerts -----------------------------
inf                         = #5db0e1
att                         = #fde74c
crit                        = #fe654f
alert-colors                = 'inf' 'att' 'crit'
er(c)
    tint(c, 30%)
er-alt(c)
    tint(c, 10%)
er-text(c)
    shade(c, 70%)
er-dark(c)
    shade(c, 90%)
er-alt-dark(c)
    shade(saturate(c, -50%), 70%)
er-text-dark(c)
    tint(saturate(c, -25%), 60%)
// Events -----------------------------
event-red                   = #f50000
event-orange                = #f57c00
event-yellow                = #fbC02d
event-green                 = #6ab046
event-blue                  = #5db0e1
event-purple                = #b176e8
event-pink                  = #e15dc9
event-colors                = 'red' 'orange' 'yellow' 'green' 'blue' 'purple' 'pink'
event-zoom                  = #2d8cff
event-zoom-hover            = shade(saturate(event-zoom, 150%), 15%)
ev(c)
    tint(c, 60%)
ev-alt(c)
    tint(c, 40%)
ev-hover(c)
    tint(saturate(c, 300%), 40%)
ev-text(c)
    shade(saturate(c, 300%), 70%)
ev-dark(c)
    shade(c, 90%)
ev-alt-dark(c)
    shade(saturate(c, -50%), 70%)
ev-hover-dark(c)
    shade(saturate(c, 300%), 60%)
ev-text-dark(c)
    tint(saturate(c, -25%), 60%)
// Variable ---------------------------
:root
    --main                  #fff8e3
    --main-dark             #101010
    --main2                 #e3dcc7
    --main2-dark            #101010
    --alt                   #4b0c10
    --alt-lighten           #7a181f
    --alt-dark              #d9c584
    --alt-lighten-dark      #ab985b
    --main-text             #000000
    --main-textA            #000000dd
    --main-textB            #000000bb
    --main-textC            #000000aa
    --main-textD            #00000077
    --main-text-dark        #fffbec
    --main-textA-dark       #fffbecdd
    --main-textB-dark       #fffbecbb
    --main-textC-dark       #fffbecaa
    --main-textD-dark       #fffbec77
    --alt-text              #ffffff
    --alt-text-dark         #000000
    --link-text:            lt = #1f53a6
    --link-text-hover       shade(lt, 15%)
    --link-text-dark:       ltd = #00b8d4
    --link-text-hover-dark  shade(ltd, 15%)
    --border-c              #4b0c10dd
    --border-c-dark         #323232
    --header-footer         #d9c584
    --header-footer-dark    #35080b
    // Alerts -------------------------
    for col, i in alert-colors
        --er-{col} er(lookup(col))
        --er-alt-{col} er-alt(lookup(col))
        --er-text-{col} er-text(lookup(col))
        --er-{col}-dark er-dark(lookup(col))
        --er-alt-{col}-dark er-alt-dark(lookup(col))
        --er-text-{col}-dark er-text-dark(lookup(col))
    // Events -------------------------
    for col, i in event-colors
        --ev-{col} ev(lookup('event-'+col))
        --ev-alt-{col} ev-alt(lookup('event-'+col))
        --ev-hover-{col} ev-hover(lookup('event-'+col))
        --ev-text-{col} ev-text(lookup('event-'+col))
        --ev-{col}-dark ev-dark(lookup('event-'+col))
        --ev-alt-{col}-dark ev-alt-dark(lookup('event-'+col))
        --ev-hover-{col}-dark ev-hover-dark(lookup('event-'+col))
        --ev-text-{col}-dark ev-text-dark(lookup('event-'+col))