hero-size = 90

hero-flex(align, justify)
  position absolute
  flex(align: justify)
  align-self align
  width 100%
  &-item
    z-index 1
    cursor pointer
    user-select none
    opacity 0.4
    animate(all, 0.2s)
    &:hover
      opacity 1
      transform scale(1.3)
    svg
      width 24px
      fill fixed-lite

.hero
  flex(align: start)
  &-content
    flex(align: start, x-align: center)
    height 54vw
    width 100%
    //background-color fixed-accent
    background linear-gradient(0deg, fixed-accent 0%, fixed-accent-slite 200%);
    overflow hidden
  &-wrapper
    position relative
  &-link
    position absolute
    display inline-block
    margin auto
    top 0
    bottom 0
    height calc(54vw * 0.8)
    left "%svw" % ( (100 - hero-size) / 2 )
    width "%svw" % (hero-size)
    z-index 10
  &-slide
    user-select none
    img, source
      margin-left "%svw" % ( (100 - hero-size) / 4 )
      width "%svw" % (hero-size)
      height 100%
  &-static
    user-select none
    img, source
      width 100%
      height 100%
  &-nav
    hero-flex(center, space-between)
    pointer-events none
    &-item
      pointer-events auto
      padding 24px
      margin 0 -20px
  &-select
    hero-flex(flex-end, center)
    &-item
      padding 2px 0px
    &-current
      opacity 1
      transform scale(1.3)
  +tablet()
    &-content
      height 44vw
    hero-size = 80
    &-link
      height calc(44vw * 0.8)
      left "%svw" % ( (100 - hero-size) / 2 )
      width "%svw" % (hero-size)
    &-slide, &-static
      img, source
        margin-left "%svw" % ( (100 - hero-size) / 4 )
        width "%svw" % (hero-size)
    &-nav
      &-item
        padding 36px
    &-select
      gap 4px
      &-item
        padding 4px 0px
        svg
          width 28px
  +laptop()
    &-content
      height 30vw
    hero-size = 60
    &-link
      height calc(30vw * 0.8)
      left "%svw" % ( (100 - hero-size) / 2 )
      width "%svw" % (hero-size)
    &-slide, &-static
      img, source
        margin-left "%svw" % ( (100 - hero-size) / 4 )
        width "%svw" % (hero-size)
    &-nav
      &-item
        padding 36px 80px
        margin 0 -60px
  +standard()
    &-content
      height 344px
    hero-size = 688
    &-link
      height calc(344px * 0.8)
      left calc((100vw - 688px) / 2)
      width "%spx" % (hero-size)
    &-slide, &-static
      img, source
        margin-left calc((100vw - 688px) / 4)
        width "%spx" % (hero-size)

.shift
  animate(transform, 0.4s)