hero-size = 90

hero-flex(align, justify)
  position absolute
  flex(align: justify)
  align-self align
  width 100%
  &-item
    z-index 1
    cursor pointer
    user-select none
    opacity 0.4
    transition all 0.2s cube-out
    &:hover
      opacity 1
      transform scale(1.3)
    svg
      width 24px
      fill lite

.hero
  flex(align: start)
  &-content
    flex(align: start, x-align: center)
    height 54vw
    background-color accent
    overflow hidden
  &-slide
    user-select none
    img, source
      margin-left "%svw" % ( (100 - hero-size) / 4 )
      width "%svw" % (hero-size)
  &-nav
    hero-flex(center, space-between)
    &-item
      padding 24px
      margin 0 -20px
  &-select
    hero-flex(flex-end, center)
    &-item
      padding 2px 0px
    &-current
      opacity 1
      transform scale(1.3)

.shift
  transition transform 0.4s cube-out