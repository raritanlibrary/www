.footer
    display flex
    flex-flow column nowrap
    background-color accent
    align-items center
    padding 16px
    gap 8px
    p
        margin-bottom 0
    h2
        text-align center
        color lite
    &-socials
        display flex
        flex-flow row wrap
        gap 12px
        margin-bottom -8px
        &-link
            width calc(32px+16px)
            fill lite
            padding 8px
    &-info
        display flex
        flex-flow row nowrap
        & > *
            width 100%
    &-contact
        display flex
        flex-flow column nowrap
        p
            lexend(14px, lite)
            margin-bottom 12px
    &-hours
        p   
            lexend(14px, lite)
            display flex
            flex-flow row nowrap
            justify-content space-between
.copyright
    lexend-mega(14px, lite)
    letter-spacing -0.12em
    text-transform uppercase
.version
    lexend(12px, accent-lite)
    text-align center
    a
        lexend(12px, lite)