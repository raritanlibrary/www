nItems      = 9
linksWidth  = 220

.nav
    background-color lite
    &-toggle
        cursor pointer
        fill nav-main
        svg
            position absolute
            width 40px
            top 22px
            right 12px
            transition color 0.2s ease-in-out, transform 0.4s ease-out

.enlarge
    transform scale(1.2)

.logo
    lexend-mega(16px, dark, bold)
    text-transform uppercase
    padding 12px 16px
    display block
    max-width 120px

.links
    display flex
    position absolute
    flex-flow column wrap
    align-content end
    right "-%spx" % (linksWidth)
    z-index 1
    transition right 0.4s cubic-bezier(0.33, 1, 0.68, 1)
    &-item
        lexend(16px, lite, bold)
        text-decoration none
        background-color neutral-dark
        padding "calc(-20px/2 - 0.8px/4*((%s - 1)/%s) + (100vh - 87px)/%s/2)" % (nItems nItems nItems) 16px
        width "%spx" % (linksWidth)
        text-align right
        &:not(:last-child)
            border-bottom 1px solid neutral
        &:hover
            background-color neutral
        &-more
            @extends .links-item
    &-open
        right 0
        display flex