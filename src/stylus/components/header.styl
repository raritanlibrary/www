nItems = 10

.nav
    background-color var(--lite)
    &-toggle
        cursor pointer
        fill nav-main
        svg
            position absolute
            width 40px
            top 22px
            right 12px
            transition color 0.2s ease-in-out, transform 0.4s ease-out
.enlarge
    svg
        width 52px
.logo
    lexend-mega(16px, var(--dark), bold)
    text-transform uppercase
    padding 12px 16px
    display block
.links
    display flex
    flex-flow column wrap
    align-content end
    &-item
        lexend(16px, var(--lite), bold)
        text-decoration none
        background-color var(--dark-lite)
        padding "calc(-20px/2 - 0.8px/4*((%s-1)/%s) + (100vh - 84px)/%s/2)" % (nItems nItems nItems) 16px
        width 250px
        text-align right
        &:not(:last-child)
            border-bottom 1px solid var(--neutral)
        &:hover
            background-color var(--neutral)
        &-more
            @extends .links-item