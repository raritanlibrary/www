nItems      = 9
linksWidth  = 220

.nav
  background-color lite
  &-toggle
    cursor pointer
    fill dark
    svg
      position absolute
      width 40px
      top 22px
      right 12px
      transition color 0.2s ease-in-out, transform 0.4s ease-out
  +tablet()
    margin 0 8px
    &-toggle
      svg
        width 50px
        top 28px
        right 20px

.enlarge
  transform scale(1.2)

.logo
  padding 12px 16px
  display block
  width 40%
  &-text
    fill dark
  &-st0
    fill fixed-accent
  &-st1
    fill accent-slite
  svg
    position relative
    height 60px
    left -8px
    +tablet()
      height 80px

.links
  flex(dir: column, wrapping: wrap)
  position absolute
  right "-%spx" % (linksWidth)
  z-index 1
  transition right 0.4s cube-out
  user-select none
  &-item
    lexend(16px, lite, bold)
    text-decoration none
    background-color neutral-dark
    color fixed-lite
    padding "calc(-20px/2 - 0.8px/4*((%s - 1)/%s) + (100vh - 87px)/%s/2)" % (nItems nItems nItems) 16px
    width "%spx" % (linksWidth)
    text-align right
    &:not(:last-child)
      border-bottom 1px solid neutral
    &:hover
      background-color neutral
    &-more
      @extends .links-item
  &-open
    right 0
  +tablet()
    linksWidth = 280
    right "-%spx" % (linksWidth)
    &-item
      font-size 18px
      padding "calc(-23px/2 - 0.8px/4*((%s - 1)/%s) + (100vh - 107px)/%s/2)" % (nItems nItems nItems) 16px
      width "%spx" % (linksWidth)
    &-open
      right 0

.search
  flex()
  margin 0 16px 16px
  position relative
  &-icon
    position absolute
    left 9px
    top 8px
    width 19px
    fill #000000
  &-enter
    position absolute
    right 1px
    top 1px
    padding 4px 8px
    border 0
    background-color transparent
    svg
      margin-top 3px
      width 19px
      fill #0a4dbc
  &-bar
    width 100%
    padding 4px 32px 6px 32px
    border 2px solid #000000
    lexend(18px, #000000)
    &::placeholder
      color #565656
  +tablet()
    margin 0 24px 16px
    &-icon
      left 12px
      top 12px
      width 24px
    &-enter
      right 2px
      top 1px
      padding 4px 12px
      svg
        margin-top 8px
        width 24px
    &-bar
      padding 9px 44px 12px 44px
      font-size 20px