.event, .snippet
  margin-bottom 16px
  &-category
    lexend(12px, accent-lite, bold)
    text-transform uppercase
    margin-bottom 8px
  &-main
    flex(align: flex-start, gap: 16px)
  &-image
    source, img
      width 124px
      min-width 124px
      height 124px
      min-height 124px
  &-header
    lexend(20px, dark, bold)
    margin-top -6px
    margin-bottom 0
  &-datetime
    lexend(14px, neutral)
    margin-bottom 8px
    text-align left
  &-misc
    margin-bottom 8px
    p
      lexend(14px, neutral)
      margin-bottom 0
      text-align left
      svg
        position relative
        fill dark
        width 16px
        top 3.5px
        margin-right 4px
  &-action
    flex(wrapping: wrap, align: start, gap: 4px 8px)
    a
      lexend(14px, lite)
      background-color accent
      padding 4px 8px
      user-select none
      text-decoration none
      animate(background-color)
      &:hover, &:focus
        background-color accent-dark
    &s-altview
      flex(wrapping: wrap, align: start, gap: 4px 8px)
  // modifiers
  &-extend
    margin-bottom 32px
  // breakpoints
  +tablet()
    width 48.5%
    &-category
      font-size 16px
    &-image
      source, img
        width 136px
        min-width 136px
        height 136px
        min-height 136px
    &-header
      font-size 18px
    &-datetime
      font-size 16px
    &-misc
      p
        font-size 16px
    &-action
      gap 6px 8px
      a
        font-size 16px
      &s-altview
        gap 6px 8px
  +laptop()
    &-image
      source, img
        width 156px
        min-width 156px
        height 156px
        min-height 156px
    &-header
      font-size 20px

#upcoming
  +tablet()
    flex(dir: row, wrapping: wrap, align: space-between, gap: 8px)