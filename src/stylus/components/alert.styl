alert(type)
    bgcolor = var(unquote(--er-+type))
    bgtext  = var(unquote(--er-text-+type))
    background-color bgcolor
    padding 12px 16px
    lexend(16px, bgtext)
    text-align justify
    text-align-last center
    svg
        position relative
        display inline
        fill bgtext
        width 1em
        top 2px
        margin-right 6px

.alert-info
    alert('inf')
.alert-att
    alert('att')
.alert-crit
    alert('crit')