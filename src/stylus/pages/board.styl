
.members
    display flex
    flex-flow row wrap
    justify-content space-evenly
    gap 32px 96px
    text-align center
    &-img
        width 150px
        border 2px solid alt('dd')
.meeting
    &-h3
        display inline-block
        margin 32px 0 -8px
        text-align left
        cursor pointer
    &-year
        max-height 700px
        overflow hidden
        transition max-height 0.3s ease-in-out
        &-collapsed
            max-height 0
        p
            margin-bottom 8px
    &-arrow
        display inline-block
        position relative
        cursor pointer
        fill alt()
        width 24px
        top -1px
        transition transform 0.2s ease-out
        @media screen and (max-width 424px)
            width 5.6vw
            top -0.236vw
            left -1px
        &-collapsed
            transform rotate(-180deg)
            top 1px
            @media screen and (max-width 424px)
                top 0.236vw