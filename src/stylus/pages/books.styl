.books
    display flex
    flex-flow row wrap
    justify-content space-evenly
    gap 32px 76px
    &-img
        width w=250px
        height w*(65/43)
        border 2px solid alt('dd')
    &-wrapper
        width 250px
    &-text
        display flex
        flex-flow column wrap
        justify-content space-evenly
        height 80px
        spacer(0.25)
    &-date
        minion(28px, alt(), bold)
        txt-shadow()
        text-align center
        @media screen and (max-width 424px)
            minion(6.6vw, alt(), bold)
    &-title
        perpetua(20px,  main-text(), bold, italic)
        text-align center
    &-sub
        perpetua(16px,  main-text('dd'), bold, italic)
        margin-top -4px
        text-align center