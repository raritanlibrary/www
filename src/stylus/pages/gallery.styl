.gallery
    display flex
    flex-flow row wrap
    justify-content space-between
    gap 24px 0
    &-img
        position relative
        border 2px solid var(--border-c) 
        overflow hidden
        display inline
        float right
        margin 0 0 5px 22px
        height 190px
        width 190px
        user-select none
        &-inner
            position absolute
            object-fit cover
            height 190px
            width 190px
        @media screen and (min-width 950px) and (max-width 1153px)
            width calc(50% - 24px)
            &-inner
                width 100%
        @media screen and (min-width 475px) and (max-width 685px)
            width calc(50% - 24px)
            &-inner
                width 100%
        @media screen and (max-width 474px)
            width 100%  
            &-inner
                width 100%