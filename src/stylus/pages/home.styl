.welcome
    display inline
    @media screen and (min-width 1380px)
        display block
    @media screen and (min-width 950px) and (max-width 1379px)
        display block
    @media screen and (max-width 875px)
        display block
.slideshow
    position relative
    //bx-shadow()
    border 2px solid var(--border-c) 
    overflow hidden
    @media screen and (min-width 1380px)
        display inline
        float right
        margin 0 0 5px 22px
        width w = calc(100vw - 880px)
        height 'calc(%s * (480/920))' % w
        max-width mw = 720px
        max-height 'calc(%s * (480/920))' % mw
    @media screen and (min-width 950px) and (max-width 1379px)
        display block
        margin 0 0 16px 0
        width w = 100%
        height 'calc((100vw - 540px) * (480/920))' % w
    @media screen and (min-width 875px) and (max-width 949px)
        display inline
        float right
        margin 0 0 5px 22px
        width w = calc(100vw - 420px)
        height 'calc(%s * (480/920))' % w
    @media screen and (min-width 425px) and (max-width 874px)
        display block
        margin 0 0 16px 0
        width w = 100%
        height 'calc((100vw - 65px) * (480/920))' % w
    @media screen and (max-width 424px)
        display block
        margin 0 0 16px 0
        width w = 100%
        height 'calc((100vw - 50px) * (480/920))' % w
    &-img
        position absolute
        max-width 100%
    picture
        for i in (1..5)
            &:nth-child({i})
                animation slideshow-fade+i ease 40s infinite
.snippet
    margin-top 36px
    min-height 180px
    &-img
        border 2px solid var(--border-c) 
        width 168px
        float right
        margin-left 20px
        @media screen and (max-width 424px)
            float none
            margin-left 0
            spacer(0.5)
            width 100%
            max-height 168px
            object-fit cover
    &-body
        display inline
        @media screen and (max-width 424px)
            display block
    &-link
        display inline-block
        margin-top 8px
        margin-right 8px
        border-radius 99px
        background-color var(--alt)
        text-align center
        padding 4px 12px
        user-select(none)
        transition background-color 0.3s ease-in-out
        @media screen and (min-width 425px) and (max-width 749px)
            margin-right 4px
        @media screen and (max-width 424px)
            display block
            margin 8px auto 0
            max-width 162px
        &:hover, &:focus
            background-color var(--alt-lighten)
        &-inner
            perpetua(18px, var(--alt-text), bold)
    &-tag
        display inline-block
        position relative
        left 16px
        top -4px
        border-radius 99px
        text-align center
        padding 4px 12px
        margin-right 8px
        @media screen and (max-width 424px)
            display block
            left 0
            top 0
            margin 8px 0
            width 85px
        &-virtual
            background-color var(--event-zoom)
            perpetua(18px, var(--alt-text), bold)
        &-kids
            background-color var(--ev-text-green)
            perpetua(18px, var(--alt-text), bold)
    &-zoom
        display inline-block
        margin-top 8px
        margin-right 8px
        border-radius 12px
        background-color var(--event-zoom)
        text-align center
        padding 6px 8px
        width 200px
        user-select(none)
        transition all 0.3s ease-in-out
        &:hover, &:focus
            background-color var(--event-zoom-hover)
        @media screen and (min-width 425px) and (max-width 749px)
            margin-right 4px
        @media screen and (max-width 424px)
            display block
            margin 8px auto 0
        &-inner
            lato(16px, var(--alt-text), bold)
        svg
            position inline
            fill var(--alt-text)
            width 48px
            margin-left 2px
            margin-bottom -1px
