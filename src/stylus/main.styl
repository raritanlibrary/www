@require './util/color'
@require './util/fonts'
@require './util/motion'
@require './util/reset'
@require './components/alert'
@require './components/header'
@require './components/hero'
@require './components/scrollbar'

html
    scroll-behavior smooth
    -ms-overflow-style none
    overflow-x hidden

.main
    transition 0.2s filter ease-in-out
    overflow-x:hidden
    background-color lite

.content
    margin 16px

h1
    lexend-mega(24px, accent)
    margin-bottom 4px

p
    lexend(18px)
    margin-bottom 16px

b
    font-weight bold

.darken
    filter brightness(40%)