@require '/util/animation'
@require '/util/color'
@require '/util/fonts'
@require '/util/misc'
@require '/util/reset'
@require '/util/vendor'
@require '/components/alert'
@require '/components/events'
@require '/components/header'
@require '/components/footer'
@require '/components/sidebar'
@require '/pages/home'

html
    @media screen and (max-width 749px)
        overflow-x hidden
a
    text-decoration none
h1
    minion(84px, alt(), bold)
    txt-shadow()
    text-align center
    display inline
    @media screen and (max-width 424px)
        minion(19.7vw, alt(), bold)
h2
    minion(56px, alt(), bold)
    txt-shadow()
    spacer(0.25)
    text-align center
    @media screen and (max-width 424px)
        minion(13.2vw, alt(), bold)
        spacer(0.5)
h3
    minion(40px, alt(), bold)
    txt-shadow()
    spacer(0.25)
    text-align center
    @media screen and (max-width 424px)
        minion(9.4vw, alt(), bold)
        spacer(0.25)
h4
    minion(28px, alt(), bold)
    txt-shadow()
    text-align center
    @media screen and (max-width 424px)
        minion(6.6vw, alt(), bold)
        spacer(0.25)
hr.hr
    grad-background("left, alt('00') 2%, alt('ff') 50%, alt('00') 98%")
    border 0
    margin 24px auto
    height 2px
    max-width 500px
    @media screen and (max-width 424px)
        max-width 100%
.body
    display grid
    grid-template-areas "h" "m" "f"
    scrollbar-width none
    -ms-overflow-style none
    &::-webkit-scrollbar
        display none
    @media screen and (max-width 749px)
        overflow-x hidden
.main
    background-color main()
    display flex
    flex-flow row nowrap
    margin auto
    min-height: calc(100vh - 120px)
    grid-area m
    transition 0.2s filter ease-in-out
    @media screen and (max-width 949px)
        flex-flow column nowrap
    @media screen and (max-width 749px)
        &-darken
            filter brightness(40%)
.center
    margin 24px 24px
    text-align justify
    @media screen and (min-width 1600px)
        m-calc = calc((100vw*(1/12) - (1600px*(1/12) - 24px)))
        margin 24px m-calc // 1/6
.text
    perpetua(22px,  main-text(),,, 1.25)
.link
    color link-text
    font-weight bold
    position relative
    transition 0.4s all
    lr-underline(2px, 4px)
    &:hover, &:focus
        perpetua(24px, link-text-hover, bold,, 0)
.comment
    perpetua(18px,  main-text('aa'),, italic)
    &-link
        perpetua(18px, link-text, bold, italic)
        position relative
        transition 0.4s all
        center-underline(1px, 3px, 97%)
        &:hover, &:focus
            perpetua(20px, link-text-hover, bold, italic, 0)
.freeze
    @media screen and (max-width 749px)
        overflow-y hidden
        user-select none