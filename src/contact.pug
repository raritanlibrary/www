extends ./templates/default.pug

block meta
    - const noindex = true
    - const title = "Contact Us"
    - const desc = "Access information on how to contact the Raritan Public Library."

block content
    .hero
        .hero-content#hero-content
            picture.hero-static
                source(srcset=`./img/hero/x.png?as=webp` alt="" type="image/webp")
                img(src=`./img/hero/x.png?as=jpeg` alt="" type="image/jpeg")
    .content
        h1.access Contact
        p If you need assistance from Raritan Public Library, our staff is available at #[b (908) 725-0413] during all open hours.
        p Our fax line is also open at #[b (908) 725-1832].
        p To contact us via email, please send all general inquiries to #[a.link(href="mailto:info@raritanlibrary.org") info@raritanlibrary.org].
        h2 Directions
        iframe.map(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3030.7647943225948!2d-74.63127868431503!3d40.56887105429572!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c3952d67d747f5%3A0x1a32742982bb460d!2sRaritan%20Public%20Library!5e0!3m2!1sen!2sus!4v1619455338683!5m2!1sen!2sus" allowfullscreen="" loading="lazy" title="Raritan Public Library on Google Maps")