<!DOCTYPE html>
html(lang="en" color-mode="lite")
    head
        - var title = "Programs"
        - var desc = "Discover exclusive programs and upcoming events, only at Raritan Public Library."
        include ./includes/_head.pug
    body
        include ./includes/access.pug
        div.body
            include ./includes/header.pug
            main.main
                .sidebar-left.sidebar-craft
                    h3.hsidebar-event Adult Craft Projects
                    p.text.spacer-plus View our previous craft projects and see the great job done by our patron crafters!
                    .crafts
                        h4 Patriotic Birdhouse Wreath
                        each img in [1,2]
                            a.crafts-img(href=`url:./img/crafts/birdhouse${img}.jpg` target="_blank")
                                picture
                                    source.crafts-img-inner(srcset=`url:./img/crafts/birdhouse${img}.jpg?as=webp` type="image/webp")
                                    img.crafts-img-inner(src=`url:./img/crafts/birdhouse${img}.jpg?as=jpeg` alt=`Patriotic Birdhouse Wreath` type="image/jpeg")
                        h4 Trellis Wreath
                        each img in [1,2]
                            a.crafts-img(href=`url:./img/crafts/trellis${img}.jpg` target="_blank")
                                picture
                                    source.crafts-img-inner(srcset=`url:./img/crafts/trellis${img}.jpg?as=webp` type="image/webp")
                                    img.crafts-img-inner(src=`url:./img/crafts/trellis${img}.jpg?as=jpeg` alt=`Trellis Wreath` type="image/jpeg")
                        h4 Peeps Bunny Wreath
                        each img in [1,2,3]
                            a.crafts-img(href=`url:./img/crafts/peeps${img}.jpg` target="_blank")
                                picture
                                    source.crafts-img-inner(srcset=`url:./img/crafts/peeps${img}.jpg?as=webp` type="image/webp")
                                    img.crafts-img-inner(src=`url:./img/crafts/peeps${img}.jpg?as=jpeg` alt=`Peeps Bunny Wreath` type="image/jpeg")
                .center
                    h2.h2-fo Programs
                    .programs
                .sidebar-right
                    include ./includes/contact.pug
                    include ./includes/hours.pug
            include ./includes/footer.pug